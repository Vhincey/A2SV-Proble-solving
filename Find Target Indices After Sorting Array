class Solution(object):
    def targetIndices(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """

        sorted_nums = sorted(nums)  
        target_indices = []

        for i in range(len(sorted_nums)):
            if sorted_nums[i] == target:
                target_indices.append(i)

        return target_indices
